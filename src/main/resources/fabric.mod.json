{
  "schemaVersion": 1,
  "id": "optifabric",
  "version": "${version}",

  "name": "OptiFabric",
  "description": "OptiFabric is a mod that loads OptiFine into fabric",
  "authors": [
    "Modmuss50",
    "Chocohead"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },
  "mixins" :[
    "optifabric.mixins.json"
  ],
  "license": "MPL-2.0",
  "icon": "assets/optifabric/icon.png",
  "environment": "client",
  "entrypoints": {
    "mm:early_risers": [
      "me.modmuss50.optifabric.mod.OptifabricSetup"
    ],
    "main": [
      "me.modmuss50.optifabric.mod.Optifabric"
    ]
  },
  "custom": {
    "fabric-renderer-indigo:force_compatibility" : true
  },
  "depends": {
    "fabricloader": ">=0.8.8",
    "minecraft": ["1.16.1", "1.16.2"],
    "mm": ">=2.0"
  }
}
